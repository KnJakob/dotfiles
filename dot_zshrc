# push all changes to chezmoi
cpush() {
  local msg="${1:-update dotfiles}"
  local dir
  dir="$(chezmoi source-path)"

  cd "$dir" || return 1
  git add .
  git commit -m "$msg"
  git push
  cd
}

kitty-reload() {
    kill -SIGUSR1 $(pidof kitty)
}

# macOS: Activates mise for the current zsh session by executing its generated shell configuration.
if [[ "$(uname)" == "Darwin" && -x "$HOME/.local/bin/mise" ]]; then
  eval "$("$HOME/.local/bin/mise" activate zsh)"
fi

