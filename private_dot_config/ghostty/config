background = 282c34
foreground = ffffff
keybind = ctrl+d=new_split:right

# =========================
# Keybindings
# =========================

keybind = "ctrl+t>n=new_tab"
keybind = "ctrl+t>c=new_tab"                 # Alternative create tab
keybind = "ctrl+t>l=next_tab"                # Next tab
keybind = "ctrl+t>h=previous_tab"            # Previous tab
keybind = "ctrl+t>1=goto_tab:1"              # Go to tab 1
keybind = "ctrl+t>2=goto_tab:2"              # Go to tab 2
keybind = "ctrl+t>3=goto_tab:3"              # Go to tab 3
keybind = "ctrl+t>4=goto_tab:4"              # Go to tab 4
keybind = "ctrl+t>5=goto_tab:5"              # Go to tab 5
keybind = "ctrl+t>6=goto_tab:6"              # Go to tab 6
keybind = "ctrl+t>7=goto_tab:7"              # Go to tab 7
keybind = "ctrl+t>8=goto_tab:8"              # Go to tab 8
keybind = "ctrl+t>9=goto_tab:9"              # Go to tab 9
keybind = "ctrl+t>x=close_tab"               # Close current tab
keybind = "ctrl+t>q=close_tab"               # Alternative close tab


# Pane / Split management with Ctrl+w prefix
keybind = "ctrl+w>v=new_split:right"         # Vertical split (right)
keybind = "ctrl+w>n=new_split:right"         # Vertical split (right)
keybind = "ctrl+w>s=new_split:down"          # Horizontal split (down)
keybind = "ctrl+w>h=goto_split:left"         # Move left
keybind = "ctrl+w>l=goto_split:right"        # Move right
keybind = "ctrl+w>j=goto_split:down"         # Move down
keybind = "ctrl+w>k=goto_split:up"           # Move up
keybind = "ctrl+w>x=close_surface"           # Close current pane
keybind = "ctrl+w>z=toggle_split_zoom"       # Toggle pane zoom (like tmux)
keybind = "ctrl+w>equal=equalize_splits"     # Equalize panes

# Resize panes
keybind = "ctrl+w>shift+h=resize_split:left,30"
keybind = "ctrl+w>shift+l=resize_split:right,30"
keybind = "ctrl+w>shift+j=resize_split:down,30"
keybind = "ctrl+w>shift+k=resize_split:up,30"


# Global quick terminal toggle
keybind = "global:super+alt+t=toggle_quick_terminal"


# Additional useful bindings
keybind = "ctrl+shift+c=copy_to_clipboard"
keybind = "ctrl+shift+v=paste_from_clipboard"
keybind = "ctrl+shift+f=toggle_fullscreen"
keybind = "ctrl+shift+r=reload_config"
keybind = "ctrl++=increase_font_size:1"
keybind = "ctrl+-=decrease_font_size:1"

