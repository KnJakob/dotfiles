background = 282c34
foreground = ffffff

# =========================
# Keybindings
# =========================

keybind = ctrl+t>n=new_tab
keybind = ctrl+t>c=new_tab                 
keybind = ctrl+t>l=next_tab                
keybind = ctrl+t>h=previous_tab            
keybind = ctrl+t>1=goto_tab:1              
keybind = ctrl+t>2=goto_tab:2              
keybind = ctrl+t>3=goto_tab:3              
keybind = ctrl+t>4=goto_tab:4              
keybind = ctrl+t>5=goto_tab:5              
keybind = ctrl+t>6=goto_tab:6              
keybind = ctrl+t>7=goto_tab:7              
keybind = ctrl+t>8=goto_tab:8              
keybind = ctrl+t>9=goto_tab:9              
keybind = ctrl+t>x=close_tab               
keybind = ctrl+t>q=close_tab               


# Pane / Split management with Ctrl+w prefix
keybind = ctrl+w>v=new_split:right         
keybind = ctrl+w>n=new_split:right         
keybind = ctrl+w>s=new_split:down          
keybind = ctrl+w>h=goto_split:left         
keybind = ctrl+w>l=goto_split:right        
keybind = ctrl+w>j=goto_split:down         
keybind = ctrl+w>k=goto_split:up           
keybind = ctrl+w>x=close_surface           
keybind = ctrl+w>z=toggle_split_zoom       
keybind = ctrl+w>0=equalize_splits     

# Resize panes
keybind = ctrl+w>shift+h=resize_split:left,30
keybind = ctrl+w>shift+l=resize_split:right,30
keybind = ctrl+w>shift+j=resize_split:down,30
keybind = ctrl+w>shift+k=resize_split:up,30


# Global quick terminal toggle
keybind = global:super+alt+t=toggle_quick_terminal


# Additional useful bindings
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+f=toggle_fullscreen
keybind = ctrl+shift+r=reload_config
keybind = ctrl++=increase_font_size:1
keybind = ctrl+-=decrease_font_size:1

