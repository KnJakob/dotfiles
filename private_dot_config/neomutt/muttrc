source ~/.config/neomutt/muttrc.credentials
# === Behavior ===
set move = no
set imap_keepalive = 300
set mail_check = 60

# === UI ===
set sort = threads
set editor = "neovim"
set charset = "utf-8"
set sort = reverse-date
set resolve = yes

# Sidebar (optional but recommended)
set sidebar_visible = yes
set sidebar_width = 30
set sidebar_short_path = yes
set sidebar_format = "%B%<F? [%F]>%* %<N?%N/>%S"
set mail_check_stats

set index_format="%4C %Z %@date@ %-20.20F %s"
# set index_format="%4C %Z %@date@ %@from_flagged@ %s"

index-format-hook  date  "~d<1d"    "%[%H:%M]"
index-format-hook  date  "~d<1w"    "%[%a %d]"
index-format-hook  date  "~d<1y"    "%[%b %d]"
index-format-hook  date  "~A"       "%[%m/%y]"
# index-format-hook  from_flagged  "~f pressestelle@tu-berlin.de"  "TU"
# index-format-hook  from_flagged  "~f pressestelle@tu-berlin.de"  "TU"
# index-format-hook  from_flagged  "~A"  %-20.20F

set color_directcolor = yes #truecolor

